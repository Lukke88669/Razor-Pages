@page
@model VaccineRent.Pages.Rents.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>疫苗預約</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rent.Name" class="control-label"></label>
                <input asp-for="Rent.Name" class="form-control" />
                <span asp-validation-for="Rent.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.Phone" class="control-label"></label>
                <input asp-for="Rent.Phone" class="form-control" />
                <span asp-validation-for="Rent.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.Birthday" class="control-label"></label>
                <input asp-for="Rent.Birthday" class="form-control" />
                <span asp-validation-for="Rent.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.ResDateTime" class="control-label"></label>
                <input asp-for="Rent.ResDateTime" class="form-control" />
                <span asp-validation-for="Rent.ResDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.Hospital_Name" class="control-label"></label>
                <select asp-for="Rent.Hospital_Name" asp-items="Model.Name" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

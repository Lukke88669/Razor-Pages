@page
@model VaccineRent.Pages.Hospitals.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Hospital</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Hospital.Name" class="control-label"></label>
                <input asp-for="Hospital.Name" class="form-control" />
                <span asp-validation-for="Hospital.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hospital.Address" class="control-label"></label>
                <input asp-for="Hospital.Address" class="form-control" />
                <span asp-validation-for="Hospital.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hospital.Country" class="control-label"></label>
                <input asp-for="Hospital.Country" class="form-control" />
                <span asp-validation-for="Hospital.Country" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Hospital.HaveModerna" /> @Html.DisplayNameFor(model => model.Hospital.HaveModerna)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Hospital.HaveAZ" /> @Html.DisplayNameFor(model => model.Hospital.HaveAZ)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Hospital.HaveBNT" /> @Html.DisplayNameFor(model => model.Hospital.HaveBNT)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
